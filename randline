#!/usr/bin/env perl -w

use strict;

my ($n, $file) = @ARGV;
unless (defined $n and $n =~ /^\d+$/) {
  die "Sample usage: $0 10 /usr/share/dict/words\nOmit file to read from STDIN\n"; 
}
my $fh = *STDIN;
if (defined $file) {
  open $fh, '<', $file or die "Can't open $file -- $!";
}

my @line; 

while (<$fh>) {
  if ((int rand $.) <= $n) {
    if (@line < $n) {
      push @line, $_;
    } else {
      $line[rand $n] = $_;
    }
  }
}

for my $s (@line) {
  print $s;
}
